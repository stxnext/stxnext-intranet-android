<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="2dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/lateView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:rotation="11"
        android:text="@string/label_lateness"
        android:textColor="#220000ff"
        android:textSize="@dimen/list_background_indicator_text_size"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/imageHolder"
            android:layout_width="@dimen/list_image_size"
            android:layout_height="@dimen/list_image_size"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/userImageView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginLeft="12dp"
                android:text="user name"
                android:textColor="#000000"
                android:textSize="@dimen/list_name_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/phoneRow"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="0.39"
                                android:gravity="left"
                                android:text="@string/label_phone"
                                android:textColor="#000000"
                                android:textSize="@dimen/list_standard_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/phoneView"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="0.61"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="666666666 234 234 23 424 32 4"
                                android:textColor="#000000"
                                android:textSize="@dimen/list_standard_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ircRow"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <TextView
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|bottom"
                                android:layout_weight="0.39"
                                android:text="IRC:"
                                android:textColor="#000000"
                                android:textSize="@dimen/list_standard_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ircView"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|bottom"
                                android:layout_weight="0.61"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="zziomalski"
                                android:textColor="#000000"
                                android:textSize="@dimen/list_standard_text_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/roleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="P2"
                android:textColor="#000000"
                android:textSize="@dimen/list_name_text_size"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/groupView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="admin"
                android:textColor="#000000"
                android:textSize="@dimen/list_standard_text_size"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>